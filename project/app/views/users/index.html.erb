<h1>all the users are here</h1>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>E-mail</th>
      <th>Last sign in</th>
      <th>Admin?</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td><%= user.email %></td>
        <td><%= user.last_sign_in_at %></td>
        <td><%= user.admin %></td>
        <% if current_user && (current_user.admin || current_user.super)%>
        <td><%= link_to 'Edit User', user %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>
