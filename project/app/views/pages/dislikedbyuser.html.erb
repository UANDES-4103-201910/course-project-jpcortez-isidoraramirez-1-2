<div class="container">
	<h1>Posts you've disliked</h1>

	<% posts = current_user.get_down_voted Post %>
	<% posts.all.each do |post| %>
		  	
	<div class="card">
		  <div class="card-header">
		  	<%= post.title %> by <%= link_to post.user.username, post.user %>
		  </div>
		  <div class="card-body">
		    <h5 class="card-title"><%= post.body %></h5>
		    <p class="card-text"></p>
		  </div>
	</div>
</br>
	<% end %>
</div>