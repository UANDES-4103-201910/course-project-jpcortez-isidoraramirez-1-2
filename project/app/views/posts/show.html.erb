
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user.email.split('@')[0].capitalize %>
</p>

<h2><%= @post.comments.count %> Comments</h2>
<%= render @post.comments %><br>
<%= link_to like_post_path(@post), class: "like-btn", method: :put, remote: :true do%>
  <div><span><p><i class = "fa fa-thumbs-up fa-3x"</i></p></span></div>
  <span class= "likes-count"> <%= @post.get_upvotes.size%>  </span>
  <% end %>
<% if current_user %>
<% if @post.user.email == current_user.email || current_user.admin || current_user.super %>
<%= link_to 'Edit', edit_post_path(@post) %>
| <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %>
<h3>Add a comment:</h3>
<%= render 'comments/form' %>
<% end %>
<% end %>








