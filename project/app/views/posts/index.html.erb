<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Likes</th>
      <th>Flags</th>
      <th>Dislikes</th>
      <th>Attachment</th>
      <th>Title</th>
      <th>Body</th>
      <th>Image</th>
      <th>User</th>
      <th>Dumpster</th>
      <th>Super admin</th>
      <th>Admin</th>
      <th>Wall</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.likes %></td>
        <td><%= post.flags %></td>
        <td><%= post.dislikes %></td>
        <td><%= post.attachment %></td>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.image %></td>
        <td><%= post.user %></td>
        <td><%= post.dumpster %></td>
        <td><%= post.super_admin %></td>
        <td><%= post.administrator %></td>
        <td><%= post.wall %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
<%= link_to 'Home', home_home_page_path %>
